<% if edit %>
  <% action = cat_url(cat) %>
  <% button_text = "Edit" %>
<% else %>
  <% action = cats_url %>
  <% button_text = "New Cat" %>
<% end %>

<h1>insert ur cat</h1>
<label for="cat_form">Cat Form</label>
<form action="<%= new_cat_url %>" method = "POST" id = "cat_form">
  <input type="hidden" name="_method" value="PATCH">
  
  
  <input type="text" value=<%=cat.name%>> 
  <br>
  <% if cat.sex == 'm' %>
    <input type="radio" name="gender" value="m" checked> Male
    <input type="radio" name="gender" value="f"> Female<br>
  <%else %>
    <input type="radio" name="gender" value="m"> Male
    <input type="radio" name="gender" value="f"checked> Female<br>
  <%end%>


  <select name="color" id="cat_color">
    <option value="" disabled>--select a color--</option>
    <%Cat::COLORS.each  do |color|%>
      <% if cat.color == color %>
        <option value="<%=color%>" selected><%=color%></option>
      <% else %>
        <option value="<%=color%>"><%=color%></option>
      <% end %>
    <%end%>
  </select>


  <br>
  <input type="date" value= <%=cat.birth_date%>>
  
  <br>
  <input type="textarea"> <br>
  <%=cat.description%>
<input type="submit" value="<%= button_text%>">

</form> 
